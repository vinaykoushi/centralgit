pipeline{
    agent any

    tools{
        jdk "java-11"
        maven "maven"
    }
    
    stages{
        stage('Git-checkout'){
            steps{
                git branch: 'master', url:'https://github.com/vinaykoushi/web-application.git'
            }
        }
        stage('compile'){
            steps{
                sh 'mvn compile'
            }
        }
        stage('package'){
            steps{
                sh 'mvn clean install'
            }
        }
        stage('docker build'){
            steps{
                sh 'docker build -t vinaykoushi/app .'
            }
        }
        stage('containerization'){
            steps{
                sh 'docker run -it -d --name c1 -p 9000:80 vinaykoushi/app'
            }
        }
    }
    
}
